    {{>layouts/header}}

    <div class="container">
      <form method="post" action="/burgers">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" id="name">이름</label>
          <div class="col-sm-10">
            <input type="text" name="name" placeholder="예)와퍼" class="form-control" for="name">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" id="price">가격</label>
          <div class="col-sm-10">
            <input type="text" name="price" placeholder="5900" class="form-control" for="price">
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2">재료</label>
          <div class="col-sm-10">
            {{#ingredientList}}
            <input type="checkbox" name="ingredientList" value="{{id}}"> {{name}}
            {{/ingredientList}}
          </div>
        </div>




        <div class="form-action">
          <button class="btn btn-primary">제출</button>
        </div>
      </form>
    </div>




  </body>
</html>